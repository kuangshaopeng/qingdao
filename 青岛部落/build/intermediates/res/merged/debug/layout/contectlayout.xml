<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     >
    <com.example.qingdao.view.NoScrollPager
        android:id="@+id/mainViewPager"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
        />
  <RadioGroup 
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/bottom_tab_bg"
    android:orientation="horizontal"
    android:id="@+id/radio"
      >
      
     <RadioButton 
    android:id="@+id/topic"
         android:drawableTop="@drawable/tab_home_selector"
         android:text="首页"
         style="@style/Bottom_Tab_Style"
         android:checked="true"
         />
        <RadioButton 
          android:id="@+id/news"
         android:drawableTop="@drawable/tab_news_selector"
         android:text="新闻中心"
         style="@style/Bottom_Tab_Style"
         />
          <RadioButton 
     android:id="@+id/smart"
         android:drawableTop="@drawable/tab_smart_selector"
         android:text="智慧服务"
         style="@style/Bottom_Tab_Style"
         />  <RadioButton 
  android:id="@+id/gov"
         android:drawableTop="@drawable/tab_gov_selector"
         android:text="政务"
         style="@style/Bottom_Tab_Style"
        
         />  
         <RadioButton 
          android:id="@+id/setting"
         android:drawableTop="@drawable/tab_setting_selector"
         android:text="设置"
         style="@style/Bottom_Tab_Style"
         />
      
  </RadioGroup>
    
    
    
</LinearLayout>
